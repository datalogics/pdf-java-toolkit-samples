<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>distributed-samples</id>
  <formats>
    <!-- <format>tar.gz</format> -->
    <!-- <format>tar.bz2</format> -->
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <!-- exclude bin, target, and some random files from our .gitignore -->
        <exclude>%regex[bin/.*]</exclude>
        <exclude>%regex[target/.*]</exclude>
        <exclude>%regex[.*_BACKUP_.*]</exclude>
        <exclude>%regex[.*_BASE_.*]</exclude>
        <exclude>%regex[.*_LOCAL_.*]</exclude>
        <exclude>%regex[.*_REMOTE_.*]</exclude>
        <exclude>%regex[.*\.orig]</exclude>
        <exclude>%regex[.*\.l4je]</exclude>
        <exclude>%regex[.*\.l4j]</exclude>
        <exclude>LICENSE.md</exclude>
        <exclude>%regex[^src/test/.*]</exclude>
      </excludes>
      <includes>
        <!-- Eclipse settings -->
        <include>.settings/org.eclipse.core.resources.prefs</include>
        <include>.settings/org.eclipse.jdt.core.prefs</include>
        <include>.settings/org.eclipse.jdt.ui.prefs</include>
        <include>.settings/org.eclipse.m2e.core.prefs</include>
        <!-- all the Markdown files at the top level -->
        <include>%regex[^[^/]*\.md]</include>
        <!-- things used to build the project -->
        <include>fix_throws_javadoc.sed</include>
        <include>fix_throws_javadoc.sh</include>
        <include>src/assembly/distributed-samples.xml</include>
        <include>pom.xml</include>
        <!-- all source files in a directory named util, in case the samples start picking those up -->
        <include>%regex[^src/.*/util/.*]</include>
        <!-- specific reduced set of sample files -->
        <include>src/main/java/com/datalogics/pdf/samples/creation/CreatePdfFromImage.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/creation/HelloWorld.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/creation/MakeWhiteFangBook.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/extraction/TextExtract.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/forms/FillForm.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/images/ImageDownsampling.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/manipulation/ConvertPdfDocument.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/manipulation/FlattenPdf.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/manipulation/MergeDocuments.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/manipulation/RedactAndSanitizeDocument.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/printing/PrintPdf.java</include>
        <include>src/main/java/com/datalogics/pdf/samples/signature/SignDocument.java</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/PDF-Java-Toolkit-Icon.bmp</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/PDF-Java-Toolkit-Icon.gif</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/PDF-Java-Toolkit-Icon.jpg</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/PDF-Java-Toolkit-Icon.png</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/WhiteFang.chapter1.txt</include>
        <include>src/main/resources/com/datalogics/pdf/samples/creation/WhiteFangCover.jpg</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/acroform_fdf.fdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/acroform_fdf.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/acroform_xfdf.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/acroform_xfdf.xfdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/xfa_data.xml</include>
        <include>src/main/resources/com/datalogics/pdf/samples/forms/xfa_form.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/images/ducky.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/FormDocument.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/Merge1.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/Merge2.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/UnConvertedPdf.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/annotations.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/pdfjavatoolkit-ds-signature.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/manipulation/pdfjavatoolkit-ds.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/pdfjavatoolkit-ds.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/printing/pdfjavatoolkit-ds.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/signature/UnsignedDocument.pdf</include>
        <include>src/main/resources/com/datalogics/pdf/samples/signature/pdfjt-cert.der</include>
        <include>src/main/resources/com/datalogics/pdf/samples/signature/pdfjt-key.der</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
